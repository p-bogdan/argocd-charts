{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "reviewers": [
    "@p-bogdan",
  ],

  "extends": [
    "config:base",

    // https://docs.renovatebot.com/presets-default/
    ":timezone(Europe/Kyiv)",
