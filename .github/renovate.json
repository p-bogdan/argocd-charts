    ":prConcurrentLimitNone",

    // https://github.com/aquaproj/aqua-renovate-config
    "github>aquaproj/aqua-renovate-config#2.3.0",
  ],
  "argocd": {
    "fileMatch": [
      "lab-dev/applications/.*\\.yaml",
    ],
  },
}
